<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head', {
        title : 'Admin | Boulevard'
    }) %> 
<body class="admin">
   
    <%- include('./partials/header') %> 
  
    <main>
   
      
    
          <section class="projects">
    
           
    
                <% products.forEach(({id,title,author,images}) => { %>
                <div>
                  
                 
                 <!-- acÃ¡ va el producto -->
               
                  <article class="art-product">

                    <div class="dropdown">
                      <button class="btn btn-outline-none" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-pen-to-square"></i>
                       </button>
                     <!-- aca va la ul con los botones -->
                     <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                      <li><a href="/products/productEdit/<%= id %>"><button class="dropdown-item" type="button"><i class="fa-solid fa-eyes"></i><i class="fa-solid fa-eye"></i> Ver</button></a></li>
                       <li><button class="dropdown-item" type="button"><i class="fa-regular fa-pen-to-square"></i> Editar</button></li>
                       <li>
                         <form action="/products/remove/<%= id %>?_method=DELETE" method="POST">
                           <button class="dropdown-item" type="button"><i class="fa-solid fa-trash"></i> Eliminar</button>
                         </form>
                       </li>
                     </ul>
                    </div>
                  
                      <div class="productDashboard">
                          <div class="image-container">
                            <a href="/products/product-detail/<%= id %> ">  <img src="/images/<%= images[0].file %> " alt=""></a>

                          </div>
                          <h4><%= title %></h4>
                           <h4><%= author %> </h4>
                           
                           
                          
                      </div>
                      
                  </article>
               
          
           
                </div>
                <% }) %>
        
          </section>
    
    
    
    
    
      
      </main>
    
       

    <%- include('./partials/footer') %> 
     
</body>

</html>