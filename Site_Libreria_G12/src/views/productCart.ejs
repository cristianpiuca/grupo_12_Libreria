                    </tbody>
                   
                  </table>
                  <tfoot class="p-3">
                    <span>TOTAL :</span>
                    <span>$125.000</span>
                  </tfoot>
                  <div class="d-grid gap-2 d-md-flex justify-content-center p-3">
                  <a href="#" class="btn btn-outline-success d-flex justify-content-center">Comprar</a>
                  <a href="#" class="btn btn-danger d-flex justify-content-center">Cancelar</a>
                 </div>
                </div>
                <a href="/payment">
                  <button>Pagar</button>
                </a>
              </div>
        </div>
        
     
        <%- include('./partials/footer') %>
        <script src="/js/cart.js"></script>
