<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head', {title : 'products'}) %>
<body>
    <%- include('./partials/header') %>
    <main>
        <section id="product1" class="section-p1">
            <div class="pro-container">
                <% products.forEach(({name, id, price,img}) => { %>
                  <!-- esto corresponde al data/categories, ahi estan las categorias con un
                  array de productos que tienen las propiedades del destructuring -->
                 <div class="pro">
                      <div class="img">
                        <img src="/images/<%= img %>" alt="">
                      </div>
                      <div class="des">
                         
                          <h5><%= name %></h5>
                          <div class="star" >
                              <i class="fa-solid fa-star"></i>
                              <i class="fa-solid fa-star"></i>
                              <i class="fa-solid fa-star"></i>
                              <i class="fa-solid fa-star"></i>
                              <i class="fa-solid fa-star-half"></i>
                          </div>
                          <h4><%= price %></h4>
                      </div>
                      <div class="cart">
                          <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>
      
                      </div>
                  </div>
                <% }) %>
              
                
              </div>
          </section>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>