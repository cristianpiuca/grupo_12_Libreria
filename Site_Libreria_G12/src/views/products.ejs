<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head', {title : 'products'}) %>
<body>
    <%- include('./partials/header', {user: user})%> 
    <main>
        <div class="product-box">
           
                <div class="col-12">
                    <h1>Todos los productos</h1>
                </div>
            
                <% products.forEach(({id,name,author,price,img}) => { %>
                    <article class="art-product">
                    
                    
                        <div class="product">
                            <div class="image-container">
                              <a href="/products/product-detail/<%= id %> "><img src="/images/<%= img %> " alt=""></a>
                            </div>
                            <h4><%= name %> </h4>
                             <h4><%= author %> </h4>
                             <h4 class="product-price">$<%= price %> </h4>
                             <a href="/products/product-cart"><button>Comprar <i class="fa fa-shopping-cart"></i></button></a>
                            
                        </div>
                        
                    </article>
                 
                <% }) %>
            
            
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>