

<header id="header">
    <!-- logo -->
    <div class="header-logo">
        <a href="/"><img src="/images/logo1.png" alt=""></a>
    </div>
    <div class="buscador-menu">
        <form id="search-form" action="/result" method="GET">
            <div id="search" class="d-flex">
                <input class="input-search" name="keyword" placeholder="Buscar">
                <i class="fas fa-search"></i>
            </div>
        </form>
    </div>

    <div>
        <ul id="navbar">


            <% if (locals.userLogin?.rol==="admin") { %>
                <li><a href="/products/productAdd">Añadir productos</a></li>

            <% } %>
                <li><a href="/products/list">Catálogo</a></li>
            <% if (!locals.userLogin) { %>
                <li class="register"><a href="/users/register">Registrarse</a></li>
                <li class="login"><a href="/users/login">Iniciar Sesión</a></li>
            <% }else{ %>
                <li><a href="/users/profile/<%= user.id %> ">MI PERFIL</a></li>
                <li><a href="/users/logout">SALIR</a></li>
                <a href="/products/product-cart"><i class="fa fa-shopping-cart"></i></a>

            <% } %>




        </ul>
    </div>



</header>